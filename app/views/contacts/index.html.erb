<% provide(:title, "Contactos") %>

<div class="table-responsive small">
  <table class="table table-striped table-sm">
   <thead>
    <tr>
    <th scope="col">#</th>
    <th scope="col">Nome</th>
    </tr>
  </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
            <td><%= contact.id %></td>
            <td><%= contact.name %></td>
        </tr>
      <% end %>
   </tbody>
</table>

